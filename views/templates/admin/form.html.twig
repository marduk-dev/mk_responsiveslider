{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  {{ form_start(slideForm) }}
  <div class="card">
    <h3 class="card-header">
      <i class="material-icons">image</i> {{ 'Slide edit'|trans({}, 'Modules.Mk_ResponsiveSlider.Admin') }}
    </h3>
    <div class="card-body">
      <div class="form-wrapper">
        {{ form_widget(slideForm) }}
      </div>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-end">
        <button class="btn btn-primary float-right" id="save-button">
          {{ 'Save'|trans({}, 'Admin.Actions') }}
        </button>
        <a class="btn btn-secondary float-right ml-2" id="cancel-button" href="{{ url('mk_responsiveslider_index') }}">
          {{ 'Cancel'|trans({}, 'Admin.Actions') }}
        </a>
      </div>
    </div>
  </div>
  {{ form_end(slideForm) }}
{% endblock %}

